{
  "name": "caganseyrek.com",
  "version": "1.0.0",
  "description": "Source of my personal website",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caganseyrek/caganseyrek.com.git"
  },
  "keywords": [
    "portfolio",
    "personal-website",
    "react"
  ],
  "author": "Çağan Seyrek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caganseyrek/caganseyrek.com/issues"
  },
  "homepage": "https://github.com/caganseyrek/caganseyrek.com#README",
  "dependencies": {
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.2",
    "highlight.js": "^11.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.4.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.28.0",
    "rehype-highlight": "^7.0.1",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  }
